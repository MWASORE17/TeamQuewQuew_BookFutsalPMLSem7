<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="tercyduk.appngasal.Activity.KonfirmasiTopup">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/linearLayout"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/linearLayout"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:id="@+id/cardView">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:orientation="vertical"
                            android:padding="10dp"
                            android:id="@+id/linearLayout2">

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Konfirmasi"
                                android:textAlignment="center"
                                android:textStyle="bold" />

                            <View style="@style/Divider"
                                android:layout_marginTop="10dp"></View>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:layout_margin="5dp"
                            android:layout_below="@+id/linearLayout2"
                            android:layout_alignParentStart="true">

                            <TextView
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:text="Nama Sesuai Bank"
                                android:textColor="@color/primarytext"
                                android:textStyle="bold" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Kelvin ANG"
                                android:textSize="12sp"
                                android:id="@+id/nameUsertop"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:layout_margin="5dp"
                            android:layout_below="@+id/linearLayout2"
                            android:layout_alignParentStart="true">

                            <TextView
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:text="Total Transfer"
                                android:textColor="@color/primarytext"
                                android:textStyle="bold" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Total Transfer"
                                android:textSize="12sp"
                                android:inputType="number"
                                android:id="@+id/ttltransfer"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="5dp"
                            android:padding="10dp"
                            android:layout_below="@+id/linearLayout2"
                            android:layout_alignParentStart="true">

                            <TextView
                                android:layout_width="180dp"
                                android:textColor="@color/primarytext"
                                android:layout_height="wrap_content"
                                android:text="Transfer dari Bank"
                                android:textStyle="bold" />
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Nama Bank"
                                android:textSize="12sp"
                                android:id="@+id/nameBanktop"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="5dp"
                            android:padding="10dp"
                            android:layout_below="@+id/linearLayout2"
                            android:layout_alignParentStart="true">

                            <TextView
                                android:layout_width="180dp"
                                android:textColor="@color/primarytext"
                                android:layout_height="wrap_content"
                                android:text="Nomor Rekening Anda"
                                android:textStyle="bold" />
                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Nomor Rekening"
                                android:textSize="12sp"
                                android:id="@+id/nomorRekening"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:layout_margin="5dp"
                            android:layout_alignParentStart="true">

                            <TextView
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:text="Tanggal Transfers"
                                android:textColor="@color/primarytext"
                                android:textStyle="bold" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="DD-MM-YYYY"
                                android:cursorVisible="false"
                                android:clickable="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:textSize="12sp"
                                android:id="@+id/edttopups"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="10dp"
                            android:layout_margin="5dp"
                            android:layout_alignParentStart="true">

                            <TextView
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:text="Catatan"
                                android:textColor="@color/primarytext"
                                android:textStyle="bold" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Masukan Catatan"
                                android:cursorVisible="false"
                                android:clickable="false"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:textSize="12sp"
                                android:id="@+id/catatan"/>

                        </LinearLayout>




                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </LinearLayout>


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#000"
        android:layout_gravity="bottom"
        android:gravity="top"
        android:padding="6dp">

        <LinearLayout
            android:id="@+id/item.topup.linear.one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:id="@+id/txt_topup_total"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lanjut Transaksi?"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/TextLayout"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_toStartOf="@+id/item.topup.linear.one">

            <Button
                android:id="@+id/btn_confirm"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Topup"
                android:layout_marginRight="5dp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="12sp" />
            <Button
                android:id="@+id/btn_cancel"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:text="Cancel"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="12sp" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
