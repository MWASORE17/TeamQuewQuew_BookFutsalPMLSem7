<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scaleType="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginRight="8dp"

        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="150dp"
            android:layout_marginTop="-10dp"
            android:layout_height="110dp"
            android:orientation="horizontal"
            android:layout_margin="5dp"
            android:layout_marginLeft="15dp">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:src="@drawable/lap1"
                android:id="@+id/hstrylapimg"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hstrylapname"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:text="Nama Lapangan"
                android:textSize="18sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/hstrylapkecamatan"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="left"
                android:text="Kecamatan"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/hstryusername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pemesan"/>
            <TextView
                android:id="@+id/hstrylapstts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status"
                />
            <LinearLayout
                android:layout_width="150dp"
                android:layout_gravity="right"
                android:layout_marginTop="-23dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/hstrylapprice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Harga"
                    android:gravity="right"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

        </android.support.v7.widget.CardView>

</FrameLayout>